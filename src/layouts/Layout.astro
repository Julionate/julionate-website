---
import "../styles/global.css"
const {title = "Julio OÃ±ate - Portfolio"} = Astro.props
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<script is:inline>
			const getTheme = localStorage.getItem("theme") ?? "system"

			const addDataTheme = () => {
				const html = document.documentElement
				if (getTheme === "dark" || getTheme === "light"){
					html.setAttribute("data-theme", getTheme)
				} else {
					html.removeAttribute("data-theme")
				}
			}

			addDataTheme()
		</script>
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
