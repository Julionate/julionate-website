---
import "../styles/global.css"
const {title = "Julio OÃ±ate - Portfolio"} = Astro.props
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<script is:inline>
			const toggleTheme = () => {document.documentElement.classList.toggle(
			"dark",
			localStorage.theme === "dark" ||
				(!("theme" in localStorage) &&
				window.matchMedia("(prefers-color-scheme: dark)").matches)
			);}
			toggleTheme();

			/* Listen to system color preference changes */
			window.matchMedia('(prefers-color-scheme: dark)').addEventListener("change", e => {
				toggleTheme();
			})
		</script>
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="text-dark dark:text-light bg-light dark:bg-dark">
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
