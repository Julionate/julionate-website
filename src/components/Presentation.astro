---
import { Status } from "../components/Status/Status"
import { getLangFromUrl } from "../i18n/utils"
import { Image } from "astro:assets"
import Prose from "../layouts/Prose.astro"
import avatar from "../assets/avatar.jpg"
import Link from "./Cards/Link.astro"
import Github from "../assets/svg/github.svg"

const lang = getLangFromUrl(Astro.url)

const {
    title = "Hi, I'm Julio!",
    description = "I'm a developer who likes to work hard and learn something new every day.",
    mySocials = "My socials",
} = Astro.props
---
<div class="flex flex-col flex-1 bg-base-200 overflow-x-hidden md:min-w-md">
    <Prose>
            <div class="bg-gradient-to-r from-primary to-fuchsia-500 bg-clip-text prose">
                <h1 class="text-transparent">{title}</h1>
            </div>
            <p>{description}</p>
    </Prose>
    <div class="flex flex-col gap-6 my-6 items-center">
        <Image src={avatar} alt="Julionate selfie" decoding="async" loading="lazy" class="object-scale-down rounded-4xl max-w-80 w-full self-center hover:-translate-y-2 hover:rotate-6 transition-transform duration-400"></Image>
        <Status client:load lang={lang}/>
    </div>
    <Prose>
        <h4>{mySocials}</h4>
        <div class="*:not-first:border-t-2 *:not-first:border-t-base-content/5">
            <Link/>
            <Link Url="https://github.com/Julionate" Label="GitHub" Svg={Github}/>
        </div>
    </Prose>
</div>